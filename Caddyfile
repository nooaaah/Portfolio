bernardi-noah.com, www.bernardi-noah.com {
	root * /srv
	file_server

	# SPA fallback (React Router, etc.)
	try_files {path} /index.html

	# Cache long pour assets (optionnel)
	@static path_regexp static \.(js|css|png|jpg|jpeg|gif|ico|svg|webp|woff2?)$
	header @static Cache-Control "public, max-age=31536000, immutable"

	encode gzip zstd
}